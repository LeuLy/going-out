<!-- Trigger the modal with a button -->
<button type="button" class="btnValid" data-toggle="modal" data-target="#myModal">Ajouter une photo</button>

<!-- Modal -->
<div class="modal fade" id="myModal" role="form">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Ajouter une photo</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                {{ form_row(userFormView.fileForm) }}
            </div>
            <div class="modal-footer">
                <button type="submit" class="btnValid" data-dismiss="modal">Enregistrer</button>
            </div>
        </div>

    </div>
</div>