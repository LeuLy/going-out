{% form_theme registrationForm 'bootstrap_4_layout.html.twig' %}
{% extends 'layout.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="row">
    <div class="col-xs-2 col-md-3"></div>
<div class="col-xs-8 col-md-6">
    <h1>Register</h1>

    <fieldset class="border p-2">
        <legend  class="w-auto">Inscription</legend>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.name) }}
        {{ form_row(registrationForm.firstname) }}
        {{ form_row(registrationForm.inscriptionYear) }}
        {{ form_row(registrationForm.phone) }}
        {{ form_row(registrationForm.agreeTerms) }}

        <button class="btnValid">Register</button>
    {{ form_end(registrationForm) }}
</div>
    <div class="col-xs-2 col-md-3">
    </div>
</div>
{% endblock %}
