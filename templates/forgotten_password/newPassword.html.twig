{% block title %}Nouveau mot de passe{% endblock %}
{% block body %}
<div class="row">
    <div class="col-xs-2 col-md-3"></div>
<div class="col-xs-8 col-md-6"  id="form_format">
    <h3>Mot de passe</h3>


    {{ form_start(userFormView) }}
    {{ form_row(userFormView.password.first) }}
    {{ form_row(userFormView.password.second) }}

