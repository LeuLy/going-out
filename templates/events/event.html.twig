{% extends 'layout.html.twig' %}

{% block title %}Liste des events{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-xs-2 col-md-3"></div>
        <div class="col-xs-8 col-md-6">
            <h1>Register</h1>
            <form role="search" action="{{ path('listEvent') }}">
                <div>

                    <button class="btn btn-outline-info" type="submit" name="label" value="ENI NANTES">ENI NANTES
                    </button>
                    <button class="btn btn-outline-info" type="submit" name="label" value="ENI QUIMPER">ENI QUIMPER
                    </button>
                    <button class="btn btn-outline-info" type="submit" name="label" value="ENI RENNES">ENI RENNES
                    </button>
                    <button class="btn btn-outline-info" type="submit" name="label" value="ENI NIORT">ENI NIORT</button>
                </div>

{#                {% if (siteLabel=="ENI NANTES" or siteLabel=="ENI QUIMPER" or siteLabel=="ENI RENNES" or siteLabel=="ENI NIORT") %}#}
{#                    test#}

{#                {% endif %}#}

                {% for event in event %}

                    <p>
                        Site label: {{ event.label }} <br>
                        Site id: {{ event.id }} <br>
                        Site description: {{ event.description }} <br>
                        Site dateInscriptionEnd: {{ event.dateInscriptionEnd |date('d-m-Y H:i:s') }} <br>
                        Site dateStart: {{ event.dateStart |date('d-m-Y H:i:s') }} <br>
                        Site dateInscriptionEnd: {{ event.dateInscriptionEnd |date('d-m-Y H:i:s') }} <br>
                        Site duration: {{ event.duration |date('H:i:s') }} <br>
                        Site maxMembers: {{ event.maxMembers }} <br>

                    </p>

                {% endfor %}


            </form>

            {% if nbPage > 0 %}
                {% for i in range(1, nbPage) %}
                    {% if page == i - 1 %}
                        <b> <a href="{{ path('listEvent',{'page': i - 1}) }}?label={{ siteLabel }}"
                               style="color:#242326;">{{ i }}</a></b>
                    {% else %}
                        <a href="{{ path('listEvent',{'page': i - 1}) }}?label={{ siteLabel }}"
                           style="color:#242326;">{{ i }}</a>

                    {% endif %}
                    {% if not loop.last %}
                        &nbsp;-&nbsp;
                    {% endif %}
                {% endfor %}
            {% else %}
                <h4>Aucun resultat pour cette recherche.</h4>
            {% endif %}
        </div>
        <div class="col-xs-2 col-md-3">
        </div>
    </div>
{% endblock %}
